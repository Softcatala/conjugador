FROM python:3.7.5
RUN git clone --depth=1 --recurse-submodules https://github.com/Softcatala/conjugador conjugador
RUN pip install gunicorn

# Generate data set
WORKDIR conjugador
RUN pip install -r requirements.txt
RUN ./extractor/extract.py
RUN ./indexer/index_creation.py

#What get's executed on Run
ENTRYPOINT /conjugador/docker/entrypoint.sh
#ENTRYPOINT /bin/bash


